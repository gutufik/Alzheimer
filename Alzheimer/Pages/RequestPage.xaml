<Page x:Class="Alzheimer.Pages.RequestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Alzheimer.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RequestPage">

    <Grid>
        <StackPanel x:Name="spRequest" Visibility="Hidden">
            <TextBlock x:Name="tbPatient"/>
            <Button x:Name="btnApprove" Content="Approve" Click="btnApprove_Click"/>
            <Button x:Name="btnRefuse" Content="Refuse" Click="btnRefuse_Click"/>
        </StackPanel>
                   
        
    </Grid>
</Page>
